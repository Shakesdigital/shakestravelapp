# AWS Production Environment Variables
NODE_ENV=production
PORT=8080

# MongoDB Atlas (recommended for AWS deployment)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shakestravel?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-min-32-chars
JWT_EXPIRE=1d
JWT_REFRESH_EXPIRE=7d

# CORS Configuration for AWS
CORS_ORIGIN=https://shakestravelapp.netlify.app,https://d1234567890abc.cloudfront.net

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Optional Services (can be added later)
# CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
# CLOUDINARY_API_KEY=your-cloudinary-api-key
# CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# AWS Services (optional)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=shakes-travel-uploads
# AWS_CLOUDFRONT_DOMAIN=d1234567890abc.cloudfront.net